<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <View
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header_bg">

    </View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:text="@string/mongome"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="Order Details"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_view"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        />


        <LinearLayout
            android:layout_width="427dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Order ID : D001"
                android:textColor="@color/f26321"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="19dp"
                android:text="Customer Name : Kamal Perera"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Address : 34, Hallummahara, Delgoda"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Items : Apple juice - 2, Mango - 3"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/bod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Total price : Rs.3000.00"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Ordered : 2021-08-09 10.00A.M"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/drivingLicences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Licences : 99099093239"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/nic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Delivery : 2021-08-10 10.00A.MA"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="158px"
                android:layout_marginTop="10dp"
                android:text="Driver ID : D001"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:background="@color/f26321"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>